<!DOCTYPE html>
<html>

<head>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../createaccount.css">
    <script src="../main.js"></script>
    <title>Create an Organization</title>
</head>

<body>
    <h1>
        <%= userAccount.first %>'s Organizations
    </h1>
    <ul>
        <% userAccount.orgList.forEach(org=> { %>
            <li>
                <%= org.name %>
            </li>
            <% }); %>
    </ul>


    <!-- lets you select an org, you can then see your relationships and create them if you're the admin -->
    <form action="/org-page" method="POST" id="orgChoice">
        <select name="orgChoice" id="orgChoice">
            <% userAccount.orgList.forEach(org=> { %>
                <option value="<%= org.name %>">
                    <%= org.name %>
                </option>
                <% }); %>
        </select>
        <button type="submit">
            Select Org
        </button>
    </form>

    <h1>Join an Organization</h1>
    <div class="main">
        <form action="/join-org" method=POST class="form1">
            <input type="text" name="orgName" align="center" placeholder="Organization Name">
            <button type="submit" class="submit" align="center">Join Org</button>
        </form>
    </div>

    <h1>Create an Organization</h1>
    <div class="main">
        <form action="/create-org" method=POST class="form1">
            <input type="text" name="orgName" align="center" placeholder="Organization Name">
            <button type="submit" class="submit" align="center">Create Org</button>
        </form>
    </div>


</body>

</html>